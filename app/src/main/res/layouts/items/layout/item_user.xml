<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person"/>

    <TextView
        android:id="@+id/user_item_txtUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-35dp"
        android:layout_marginRight="-35dp"
        android:layout_toStartOf="@+id/textView3"
        android:layout_toLeftOf="@+id/textView3"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/userImage"
        android:fontFamily="sans-serif-black"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_item_txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textView3"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/user_item_txtUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_item_txtUserName"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/user_item_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/user_item_txtUserName"
        android:layout_toRightOf="@+id/textView3"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_item_txtSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_item_txtUserName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/user_item_txtName"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="18sp" />



</RelativeLayout>