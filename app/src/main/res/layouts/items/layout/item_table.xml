<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/tableImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_table_1" />

    <TextView
        android:id="@+id/table_item_txtTableId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="-35dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/textView"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/tableImage"
        android:fontFamily="sans-serif-black"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/table_item_txtTableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView1"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/textView"
        android:fontFamily="serif"
        android:text="No:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/table_item_txtTableName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_item_txtTableNumber"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>