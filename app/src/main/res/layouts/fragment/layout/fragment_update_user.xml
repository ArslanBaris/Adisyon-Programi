<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textStyle="bold|italic"
                android:text="UPDATE USER"/>

            <ImageView
                android:id="@+id/update_user_imgClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic__close"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextUpdateUserID"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="ID"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUpdateUsername"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editTextUpdateUserID"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUpdateName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editTextUpdateUsername"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUpdateSurname"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextUpdateName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Surname"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUpdateEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextUpdateSurname"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUpdatePassword"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextUpdateEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName|textPassword"
                android:textAlignment="center" />

            <RadioGroup
                android:id="@+id/updateRadio"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextUpdatePassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp">

                <RadioButton
                    android:id="@+id/rbUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manager" />

                <RadioButton
                    android:id="@+id/rbUpdateAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Administrator" />
            </RadioGroup>

            <Button
                android:id="@+id/putUser"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateRadio"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="100dp"
                android:text="Save" />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>