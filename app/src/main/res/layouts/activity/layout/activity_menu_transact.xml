<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_recyclerView"
        android:layout_width="185dp"
        android:layout_height="660dp"
        android:layout_below="@+id/btnCategoryAdd"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recyclerView"
        android:layout_width="213dp"
        android:layout_below="@+id/btnCategoryAdd"
        android:layout_height="660dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/category_recyclerView" />

    <Button
        android:id="@+id/btnCategoryAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_add"
        android:layout_toLeftOf="@+id/btnCategoryUpdate"
        android:onClick="FragmentCategoryAdd"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/btnCategoryUpdate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/btnCategoryDelete"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_update"
        android:onClick="FragmentCategoryUpdate"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/btnCategoryDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/product_recyclerView"
        android:background="@drawable/ic_delete"
        android:onClick="CategoryDelete"
        app:backgroundTint="#000000"
        android:layout_toLeftOf="@+id/product_recyclerView" />

    <Button
        android:id="@+id/btnMenuAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_add"
        android:layout_toLeftOf="@+id/btnMenuUpdate"
        android:onClick="FragmentMenuAdd"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/btnMenuUpdate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/btnMenuDelete"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_update"
        android:onClick="FragmentMenuUpdate"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/btnMenuDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_delete"
        android:onClick="MenuDelete"
        app:backgroundTint="#000000"
        android:layout_alignParentRight="true" />


</RelativeLayout>

